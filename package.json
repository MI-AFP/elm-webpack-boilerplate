{
  "name": "elm-webpack-boilerplate",
  "version": "1.0.0",
  "scripts": {
    "build": "rm -rf dist && NODE_ENV=production webpack -p",
    "dev": "webpack-dev-server --port 8080",
    "format": "run-s format:elm format:prettier",
    "format:elm": "elm-format --yes ./src/",
    "format:prettier": "prettier --write ./webpack.config.js README.md"
  },
  "devDependencies": {
    "copy-webpack-plugin": "^4.6.0",
    "css-loader": "^2.1.1",
    "elm": "^0.19.0",
    "elm-format": "^0.8.5",
    "elm-webpack-loader": "^5.0.0",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "sass-loader": "^7.1.0",
    "style-loader": "^0.23.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3",
    "webpack-dev-server": "^3.2.1"
  }
}
